{
	"files.associations": {
		"*.cppm": "cpp",
		"*.d": "makefile",
  		"dockerfile-system": "dockerfile"
	},
	"search.exclude": {
        "**/.git": true,
        "**/lib": true,
        "**/tmp": true,
		"third-party/llvm-project": true,
		"third-party/antlr": true
	},
	"clangd.arguments": [
		"-header-insertion=never"
	],
	"todo-tree.tree.showBadges": false,
	"todo-tree.highlights.customHighlight": {
		"BUG": {
			"icon": "alert",
			"foreground": "red",
			"background": "black",
		},
		"TODO": {
			"icon": "circle",
			"foreground": "orange",
			"background": "black",
		},
		"- \\[ \\]": {
			"foreground": "orange",
			"background": "black",
			"type": "text",
		},
    },
}
